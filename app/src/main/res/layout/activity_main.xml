<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

  <TextView
      android:id="@+id/text_view"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="60dp"
      android:padding="20dp"
      android:text="100$"
      android:textAlignment="center"
      android:textSize="50sp"
      android:textStyle="bold" />

  <Button
      android:id="@+id/startgame_btn"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_above="@id/stopgame_btn"
      android:layout_marginBottom="0dp"
      android:padding="20dp"
      android:text="@string/startgame"
      android:textStyle="bold" />

  <Button
        android:padding="20dp"

        android:id="@+id/stopgame_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stopgame"
        android:layout_centerVertical="true"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/showgrowth_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/showgrowth"
        android:layout_below="@id/stopgame_btn"
        android:padding="20dp"
        android:textStyle="bold"/>


</RelativeLayout>